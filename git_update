mkdir -p $HOME/.mygit/home
mkdir -p $HOME/.mygit/root/etc/default
mkdir -p $HOME/.mygit/root/etc/portage
mkdir -p $HOME/.mygit/root/usr/src/linux

rsync -a --delete $HOME/.fonts              $HOME/.mygit/home
rsync -a --delete $HOME/.i3                 $HOME/.mygit/home
rsync -a --delete $HOME/.Xdefaults          $HOME/.mygit/home
rsync -a --delete $HOME/.bashrc             $HOME/.mygit/home
rsync -a --delete $HOME/.nanorc             $HOME/.mygit/home
rsync -a --delete $HOME/.wallpaper.jpg      $HOME/.mygit/home
rsync -a --delete $HOME/.xinitrc            $HOME/.mygit/home
rsync -a --delete $HOME/.zshrc              $HOME/.mygit/home

rsync -a --delete /etc/fstab                $HOME/.mygit/root/etc
rsync -a --delete /etc/hosts                $HOME/.mygit/root/etc

rsync -a --delete /etc/default/grub         $HOME/.mygit/root/etc/default
rsync -a --delete /etc/portage/package.*    $HOME/.mygit/root/etc/portage
rsync -a --delete /etc/portage/make.conf    $HOME/.mygit/root/etc/portage

rsync -a --delete /usr/src/linux/.config    $HOME/.mygit/root/usr/src/linux


cd $HOME/.mygit
git add .
git commit -m 'some changes'
git push -u origin master 